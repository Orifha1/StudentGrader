<%- include("./partials/header") %>

<div class="d-flex justify-content-center container" id="formContent">
    <form class="border border-dark p-5 w-75 p-3 rounded" action="/register" method="POST">
        <div class="text-center">
            <h1>
                <p class="h2 mb-4">Sign up</p>
            </h1>   
          </div>
        <div class="form-group">
            <input type="text" class="form-control mb-4 input-sm" name="username" placeholder="Username">
        </div>
        <div class="form-group">
            <input type="text" class="form-control mb-4 input-sm" name="password" placeholder="Password">
        </div>
        <div class="form-group">
            <input type="text" class="form-control mb-4 input-sm" name="personNumber" placeholder="Student/Stuff number">
        </div>
        <div class="form-check form-group">
            <input type="checkbox" class="form-check-input" id="materialUnchecked">
            <label class="form-check-label" for="materialUnchecked">I am a Student</label>
        </div>
        <div id="studentField" style="display:none">
            <hr>
            <div class="form-group">
                <input type="text" class="form-control mb-4 input-sm" name="supervisor" placeholder="Supervisor name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control mb-4 input-sm" name="projectTitle" placeholder="Project Title">
            </div>
        </div>
        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary custom-btn" value="Sign-up">
        </div> 
    </form>
</div>

<%- include("./partials/footer") %>