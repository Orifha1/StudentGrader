<%- include("../partials/header") %>


  <div class="d-flex justify-content-center container" id="formContent">
    <form class="border border-dark p-5 w-75 p-3 rounded" action="/sessions" method="POST">
      <div class="text-center">
        <p class="h4 mb-4">Create a session</p>
      </div>
      <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control mb-4 input-sm" name="title" placeholder="Name of the Session">
      </div>
      <div class="form-group">
        <label>Access code</label>
        <input type="text" class="form-control mb-4 input-sm" name="accesscode" placeholder="Enter the access code">
      </div>
      <div class="form-group">
        <label>Admin Code</label>
        <input type="text" class="form-control mb-4 input-sm" name="admincode" placeholder="Enter the access code">
      </div>
      <div class="form-group">
        <label>Description of the session</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="description" rows="5"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>

<%- include("../partials/footer") %>